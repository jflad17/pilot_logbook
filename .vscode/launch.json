  "version": "0.1.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "npm: develop"
    },
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--host", "localhost", "--port", "9000", "--reload"],
      "cwd": "${workspaceRoot}/backend",
      "jinja": true,
      "justMyCode": true
    }
  ]
}
